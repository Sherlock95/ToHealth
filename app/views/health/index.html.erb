<h1>Health Report</h1>
<h2>User Name</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Sleep During the Past 7 Days</th>
      <th>Three good meals eaten</th>
      <th>Fruits and Vegetables?</th>
      <th>Stress Level</th>
      <th>Bible Reading</th>
      <th>Have you prayed today</th>
      <th>Have you exercised today</th>
      <th>Are you accomplishing your goals?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.sleepAnswer + " Hours"%><td>
        <td><%= answer.mealsAnswer + " Meals"%><td>
        <td><%= answer.fruitAndVegAnswer #needs to be adjusted for the bool answer%><td>
        <td><%= answer.stressAnswer%><td>
        <td><%= answer.bibleAnswer%><td>
        <td><%= answer.prayerAnswer%><td>
        <td><%= answer.goalsAnswer%><td>
      </tr>
    <% end %>
  </tbody>
</table>

